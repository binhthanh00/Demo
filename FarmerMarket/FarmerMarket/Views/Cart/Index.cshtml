
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

@section styles{
    <link rel="stylesheet" href="~/wwwroot/css/cart.css">
    <link rel="stylesheet" href="~/wwwroot/css/contact.css">
    <link rel="stylesheet" href="~/wwwroot/css/sea-knowledge.css">
}
<div class="wrapper">
    <div class="container-content container-fluid">
        <div class="container-content-nav">
            <div class="row container-content-nav-align">
                <div class="col-lg-3 no-marign no-padding">
                    <div class="col-menu-cat">
                        <i class="fa-solid fa-align-left"></i>
                        <span>Danh mục sản phẩm</span>
                    </div>
                </div>
                <div class="col-lg-8 container-content-nav-right-align">
                    <ul class="nav nav-pills">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="@Url.Action("Index","Home")">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index","Introduce")">Giới thiệu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index","KnowledgeSeafood")">Kiến thức hải sản</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index","NewBussiness")">Tin doanh nghiệp</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index","Recruit")">Tuyển dụng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index","Contact")">Liên hệ</a>
                        </li>
                    </ul>
                </div>
            </div>



        </div>
        <br>



    </div>
    <div class="block-product">
        <p class="breadcrumb_last">
            Home <i class="fa-solid fa-angles-right"></i> <span>Liên hệ</span>
        </p>

    </div>
    <div class="page-content">
        <div class="row">
            <div class="col-md-7 order-md-1 order-2">
                <div class="checkout-container">
                    <h2 class="page-title mb-3">Thông tin đặt hàng</h2>
                    <form action="" class="checkout-form">
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="">Họ tên</label>
                                <input type="text" name="fullname" placeholder="Nhập họ tên" class="form-control" required="required">
                            </div>
                            <div class="form-group col-md-3">
                                <label for="">Số điện thoại</label>
                                <input type="text" name="numberphone" placeholder="Điện thoại" class="form-control" pattern="(\+84|0){1}(9|8|7|5|3){1}[0-9]{8}" required="required">
                            </div>
                            <div class="form-group col-md-5">
                                <label for="">Email</label>
                                <input type="text" name="email" placeholder="email" class="form-control">
                            </div>
                            <div class="form-group col-md-12">
                                <label for="">Địa chỉ nhận hàng</label>
                                <input type="text" name="address" placeholder="" class="form-control" required="required">
                            </div>
                            <div class="form-group col-md-12">
                                <label for="">Ghi chú đơn hàng</label>
                                <textarea name="order-note" class="form-control" placeholder="vd: giao hàng trước 11h trưa" rows="5"></textarea>
                            </div>

                        </div>
                        <input type="hidden" name="product" value="Ốc Gai[270,000x2]">
                        <input type="hidden" name="total" value="540000">
                        <button type="submit" class="btn btn-order">Đặt hàng</button>
                    </form>
                </div>
            </div>
            <div class="col-md-5 order-md-2 order-1">
                <div class="cart-container">
                    <h1 class="page-title mb-3">Giỏ hàng</h1>
                    <div class="d-flex align-items-center cart-item">
                        <div class="col col-image col-2">
                            <a href="https://haisan.online/san-pham/oc-gai">
                                <img src="https://haisan.online/wp-content/uploads/2022/02/oc-gai-4-150x150.jpg" alt="">
                            </a>
                        </div>
                        <div class="col col-name col-7">
                            <p class="product-name">
                                <a href="https://haisan.online/san-pham/oc-gai">
                                    Ốc Gai
                                </a>
                            </p>
                            <div class="product-qty">
                                <div class="product-qty">
                                    <span class="price">
                                        270,000
                                    </span>
                                    <span class="qty"><span class="number">x2</span></span>
                                </div>
                            </div>
                        </div>
                        <div class="col col-price  col-3">
                            <span class="product-price">
                                540,000 <sup>đ</sup>
                            </span>
                            <span class="delete-item" data-id="138529">
                                <i class="fa-solid fa-trash-can"></i>
                            </span>
                        </div>
                    </div>
                    <div class="cart-total text-right">
                        <div class="total">
                            Tổng tiền <span>540,000<sup>đ</sup></span>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>
